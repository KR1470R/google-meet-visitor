{
  "manifest_version": 3,
  "name": "Visitor Recorder",
  "version": "7.0.2",
  "permissions": [
    "tabs", 
    "activeTab", 
    "desktopCapture"
  ],
  "background": {
    "service_worker": "./background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["./foreground.js"]
  }],
  "action": {
    "default_popup": "./index.html"
  },
  "icons": {
    "128": "./icons/128.png"
  }
}